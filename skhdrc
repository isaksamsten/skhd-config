cmd - return : /Applications/kitty.app/Contents/MacOS/kitty --single-instance -d ~ &> /dev/null

lalt - f : yabai -m window --toggle zoom-fullscreen
shift + lalt - f : yabai -m window --toggle zoom-parent

# Space configuration {{{
alt - x : yabai -m space --focus recent
alt - z : yabai -m space --focus prev
alt - c : yabai -m space --focus next
lalt - 1 : yabai -m space --focus 1 
lalt - 2 : yabai -m space --focus 2 
lalt - 3 : yabai -m space --focus 3 
lalt - 4 : yabai -m space --focus 4 
lalt - 5 : yabai -m space --focus 5 
lalt - 6 : yabai -m space --focus 6 
lalt - 7 : yabai -m space --focus 7 
lalt - 8 : yabai -m space --focus 8 

shift + lalt - x : yabai -m window --space recent && yabai -m space --focus recent
shift + lalt - z : yabai -m window --space prev && yabai -m space --focus prev
shift + lalt - c : yabai -m window --space next && yabai -m space --focus next
shift + lalt - 1 : yabai -m window --space  1 && yabai -m space --focus 1
shift + lalt - 2 : yabai -m window --space  2 && yabai -m space --focus 2
shift + lalt - 3 : yabai -m window --space  3 && yabai -m space --focus 3
shift + lalt - 4 : yabai -m window --space  4 && yabai -m space --focus 4
shift + lalt - 5 : yabai -m window --space  5 && yabai -m space --focus 5
shift + lalt - 6 : yabai -m window --space  6 && yabai -m space --focus 6
# }}}

shift + lalt - x : yabai -m space --mirror x-axis
shift + lalt - y : yabai -m space --mirror y-axis

# Focus window {{{
lalt - h    : yabai -m window --focus west  || yabai -m display --focus west
lalt - j    : yabai -m window --focus south || yabai -m display --focus south
lalt - k    : yabai -m window --focus north || yabai -m display --focus north
lalt - l    : yabai -m window --focus east  || yabai -m display --focus east

lalt - n : yabai -m window --focus next || yabai -m window --focus prev
lalt - p : yabai -m window --focus prev || yabai -m window --focus last
lalt - m : yabai -m window --focus first
# }}}

# Resize window {{{
ctrl + lalt - h    : yabai -m window --resize right:-100:0 || yabai -m window --resize left:-100:0
ctrl + lalt - j    : yabai -m window --resize bottom:0:100 || yabai -m window --resize top:0:100
ctrl + lalt - k    : yabai -m window --resize bottom:0:-100 || yabai -m window --resize top:0:-100
ctrl + lalt - l    : yabai -m window --resize right:100:0 || yabai -m window --resize left:100:0
# }}}

# Stack window {{{
shift + cmd - h : yabai -m window --warp west
shift + cmd - k : yabai -m window --warp north
shift + cmd - j : yabai -m window --warp south
shift + cmd - l : yabai -m window --warp east
# }}} 

# Move window {{{ 
shift + lalt - h : yabai -m window --swap west
shift + lalt - j : yabai -m window --swap south
shift + lalt - k : yabai -m window --swap north
shift + lalt - l : yabai -m window --swap east

shift + lalt - m : yabai -m window --swap first

# }}}

lalt - v : yabai -m window --insert south
lalt - c : yabai -m window --insert east

lalt - s : yabai -m window --toggle split
lalt - r         : yabai -m space --rotate 270
shift + alt - r  : yabai -m space --rotate 90

lalt - x         : yabai -m space --mirror x-axis
lalt - y         : yabai -m space --mirror y-axis 
ctrl + alt - a : yabai -m space --layout bsp
ctrl + alt - d : yabai -m space --layout float

cmd + shift - 0  : yabai -m space --balance
